{
	"compilerOptions": {
		"target": "es2024",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"sourceMap": true,
		"typeRoots": ["./node_modules/@types"],
		"moduleResolution": "node",
		"types": ["chrome", "node", "webpack-env", "jest"],
		"lib": ["ESNext", "dom"]
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": ["node_modules", "dist"]
}
