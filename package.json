{
	"name": "mole",
	"version": "0.11.10",
	"description": "Content extraction browser extension.",
	"scripts": {
		"dev:chrome": "webpack --watch --env BROWSER=chrome --mode development",
		"dev:firefox": "webpack --watch --env BROWSER=firefox --mode development",
		"build:chrome": "webpack --env BROWSER=chrome --mode production",
		"build:firefox": "webpack --env BROWSER=firefox --mode production",
		"build": "npm run build:chrome && npm run build:firefox",
		"dev": "npm run dev:chrome",
		"test": "playwright test",
		"test:ui": "playwright test --ui",
		"test:headed": "playwright test --headed"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.0",
		"@types/chrome": "^0.0.270",
		"@types/jest": "^30.0.0",
		"@types/node": "^22.5.4",
		"@types/turndown": "^5.0.5",
		"@types/webpack-env": "^1.18.5",
		"copy-webpack-plugin": "^13.0.1",
		"http-server": "^14.1.1",
		"jest": "^30.1.3",
		"ts-jest": "^29.4.1",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4",
		"webpack": "^5.97.1",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"defuddle": "^0.6.6",
		"turndown": "^7.2.1"
	}
}
